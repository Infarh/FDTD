<Window x:Class="FDTD2DLab.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:FDTD2DLab"
        mc:Ignorable="d"
        Title="TestWindow" Height="450" Width="800">
    <Grid>
        <TextBox VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10" Width="100" 
                Text="{Binding Value, ElementName=ValueEdit}" />
        <ScrollBar Name="ValueEdit" Style="{StaticResource UpDownScrollBar}" 
                   VerticalAlignment="Top" HorizontalAlignment="Left" 
                   Margin="10,30"
                   Width="100"
                   Maximum="3" Minimum="-3"/>
    </Grid>
</Window>
